{% extends 'base.html.twig' %}

{% block title %}Nouvelle Commande - {{ parent() }}{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0"><i class="bi bi-plus-circle"></i> Nouvelle Commande</h4>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                    <div class="mb-3">
                        {{ form_label(form.produits) }}
                        <div class="row">
                            {% for produit in form.produits %}
                                <div class="col-md-6 mb-2">
                                    <div class="form-check">
                                        {{ form_widget(produit) }}
                                        {{ form_label(produit) }}
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                        {{ form_errors(form.produits) }}
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="{{ path('app_commande_index') }}" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Retour
                        </a>
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-circle"></i> Passer la commande
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Information</h5>
            </div>
            <div class="card-body">
                <p class="text-muted">
                    <i class="bi bi-info-circle"></i> 
                    Sélectionnez un ou plusieurs produits pour créer votre commande. 
                    Seuls les produits en stock sont disponibles.
                </p>
                <p class="text-muted">
                    <i class="bi bi-clock"></i> 
                    Votre commande sera en attente de validation par un administrateur.
                </p>
            </div>
        </div>
    </div>
</div>
{% endblock %}
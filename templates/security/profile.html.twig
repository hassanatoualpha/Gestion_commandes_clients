{% extends 'base.html.twig' %}

{% block title %}Mon Profil - {{ parent() }}{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0"><i class="bi bi-person-circle"></i> Mon Profil</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Email</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        {{ app.user.email }}
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Rôles</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        {% for role in app.user.roles %}
                            <span class="badge bg-primary me-1">{{ role }}</span>
                        {% endfor %}
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Membre depuis</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        Informations non disponibles
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Actions rapides</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    {% if is_granted('ROLE_USER') %}
                        <a href="{{ path('app_commande_new') }}" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Nouvelle Commande
                        </a>
                        <a href="{{ path('app_commande_index') }}" class="btn btn-outline-primary">
                            <i class="bi bi-list-ul"></i> Mes Commandes
                        </a>
                    {% endif %}
                    
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('app_produit_index') }}" class="btn btn-success">
                            <i class="bi bi-box-seam"></i> Gérer Produits
                        </a>
                        <a href="{{ path('admin_commande_index') }}" class="btn btn-warning">
                            <i class="bi bi-clipboard-check"></i> Valider Commandes
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}